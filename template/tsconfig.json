{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@Assets/*": ["src/Assets/*"],
      "@Components": ["src/Components"],
      "@Constants": ["src/Constants"],
      "@Screens/*": ["src/Screens/*"],
      "@Hooks": ["src/Hooks"],
      "@I18n": ["src/I18n"],
      "@Model": ["src/Model"],
      "@Utils/*": ["src/Utils/*"],
      "@Services/*": ["src/Services/*"],
      "@Store": ["src/Store"],
      "@Type/*": ["src/Type/*"],
      "@Navigators/*": ["src/Navigators/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
